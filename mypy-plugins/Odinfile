from enum import Enum
from xju.json_codec import codec #, _xxx
#_xxx()
class X(Enum):
    a="A"
    b="B"
    pass
c1=codec(X)
x = (c1.encode(X.a),
     c1.encode("fred"))
r1:X = c1.decode("A")
r1x:int = c1.decode("A")


