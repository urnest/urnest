import asyncio

from xju.cmc import AsyncThread, Condition, Mutex, Lock
from xju.assert_ import Assert
from xju.xn import readable_repr

async def f_good() -> int:
    return 3

async def f_bad() -> int:
    raise Exception('fred')

async def f_sleep() -> int:
    await asyncio.sleep(10)
    return 3

async def main():
    with AsyncThread(f_good) as t:
        Assert(await t.result)==3
    with AsyncThread(f_bad) as t:
        try:
            await t.result
        except Exception as e:
            Assert(str(e))=='fred'
        else:
            assert False
            pass
        pass
    try:
        with AsyncThread(f_sleep):
            pass
    except Exception as e:
        Assert(readable_repr(e))=='xxxx'
    pass

asyncio.run(main())
